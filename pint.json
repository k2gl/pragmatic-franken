{
    "preset": "psr12",
    "rules": {
        "declare_strict_types": true,
        "phpdoc_scalar": true,
        "phpdoc_separation": false,
        "visibility_required": true,
        "no_unused_imports": true,
        "array_syntax": {"syntax": "short"}
    },
    "exclude": [
        "vendor",
        "node_modules",
        "coverage",
        ".phpunit.result.cache"
    ]
}
