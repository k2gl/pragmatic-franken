# Pragmatic Franken - Local Environment Configuration
# Copy this file to .env.local and customize as needed

# Application
APP_SECRET="change-this-in-production-use-secure-random-string"
SERVER_NAME="localhost"

# Database (configured in docker-compose.yml)
# DATABASE_URL is set automatically for local dev

# Redis (configured in docker-compose.yml)
# REDIS_URL is set automatically for local dev

# PHP / FrankenPHP
XDEBUG_MODE=off
PHP_MEMORY_LIMIT=128M
PHP_MAX_REQUESTS=500

# Worker Mode
FRANKENPHP_MAX_JOBS=8
SCHEDULER_ENABLED=false
